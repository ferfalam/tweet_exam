<p id="notice"><%= notice %></p>

<h1>Tweets</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%=tweet.content%></td>
        <td><%= link_to 'Show', tweet_path(tweet.id) %></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet.id) %></td>
        <td><%= link_to 'Destroy', tweet_path(tweet.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

